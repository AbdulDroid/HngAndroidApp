<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team_galaxy.hnginterns.hngmobileapp.ui.fragments.ConfirmBookingFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="400dp"
            android:layout_height="199dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="185dp"
                    android:layout_height="168dp"

                    tools:layout_editor_absoluteX="1dp"
                    tools:layout_editor_absoluteY="16dp" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-Suites " />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Description of place " />

                    <RatingBar
                        android:id="@+id/ratingBar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="245dp"
                        tools:layout_editor_absoluteY="108dp"
                        style="@style/Widget.AppCompat.RatingBar.Small"/>

                </android.support.v7.widget.LinearLayoutCompat>


            </LinearLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="99dp"
            tools:layout_editor_absoluteY="200dp"
            tools:layout_editor_absoluteX="200dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/checkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check In"
                    android:padding="8dp" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Sep 09 2017"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="99dp"
            tools:layout_editor_absoluteY="200dp"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Check Out" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sep 08 2017"
                    android:padding="8dp"
                    android:id="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/checkin" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="400dp"
            android:layout_height="99dp"
            tools:layout_editor_absoluteY="300dp"
            tools:layout_editor_absoluteX="0dp">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adult"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="330dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        tools:layout_editor_absoluteX="77dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView6" />

                </android.support.v7.widget.LinearLayoutCompat>

                <Button
                    android:id="@+id/button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="+"
                    tools:layout_editor_absoluteX="307dp"
                    tools:layout_editor_absoluteY="330dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="-"
                    tools:layout_editor_absoluteY="330dp"
                    app:layout_constraintRight_toLeftOf="@+id/button" />


            </android.support.v7.widget.LinearLayoutCompat>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="400dp"
            android:layout_height="100dp"
            tools:layout_editor_absoluteY="401dp"
            tools:layout_editor_absoluteX="0dp">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="290dp"
                    android:layout_height="101dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room"
                        />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Super Deluxe"
                        />

                </android.support.v7.widget.LinearLayoutCompat>

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_delete" />

            </android.support.v7.widget.LinearLayoutCompat>


        </android.support.v7.widget.CardView>




        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Payment and Book"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="531dp" />



    </android.support.constraint.ConstraintLayout>

</FrameLayout>
